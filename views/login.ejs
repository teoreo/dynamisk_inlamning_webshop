<div class="row justify-content-center">
	<div class="col-12 content slctn">
		<form class="col-12" action="/login" method="POST">
			<h1 class="title">LOG IN</h1>
			<p class="errorMessage"><%= errorMessage %></p>
			<div class="row">
				<div class="col-8 col-md-12">
					<div class="row justify-content-center">
						<div class="col-8 col-md-8">
							<div class="form-group">
								<input type="email" name="loginemail" class="inputlong form-control" id="loginEmail"
									placeholder="Email" />
							</div>
							<div class="form-group">
								<input type="password" name="loginpassword" class="inputlong form-control"
									id="loginPassword" placeholder="Password" />
							</div>
							<button type="submit" id="logInBtn" class="buttonblue">Log In</button>
						</div>
					</div>

					<div class="row justify-content-center">
						<div class="col-8 col-md-12">
							<a href="/reset">
								<p>Forgot Password?</p>
							</a>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
